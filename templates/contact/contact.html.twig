                    <input type="text" class="form-control" name="subject" id="subject" placeholder="L'objet de votre message" required>
                    </div>
                </div>
                <div class="">
                    <div class="form-group">
                    <textarea class="form-control" name="message" rows="5" placeholder="Votre message" required></textarea>
                    </div>
                </div>
                            
                <div class=" text-center mt-4 d-flex  justify-content-center align-items-center ">
