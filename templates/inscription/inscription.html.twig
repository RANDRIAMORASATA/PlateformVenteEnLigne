{% extends "base.html.twig" %}

{% block body %}
<div class="d-flex justify-content-center align-items-center flex-column h-100">
    <div class="title-box-2 mb-4 mt-4">
        <h5 class="text-center">
            Inscription
        </h5>
    </div>
    <div class="d-flex justify-content-center">
        <form action="/inscription" method="post" class="php-email-form w-50">
            {% if error %}
                <div class="alert alert-danger">{{ error }}</div>
            {% endif %}
            <div class="row">
                <div class="mb-3">
                    <div class="form-group">
                        <input type="text" name="name" class="form-control" id="name" placeholder="Votre nom" required>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" id="email" placeholder="Votre email" required>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" id="password" placeholder="Votre mot de passe" required>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="form-group">
                        <input type="text" class="form-control" name="adress" id="adress" placeholder="Votre adresse" required>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="form-group">
                        <input type="text" class="form-control" name="tel" id="tel" placeholder="Votre numéro de téléphone" required>
                    </div>
                </div>
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-info text-white">Inscrire</button>
                </div>
            </div>
        </form>
    </div>
</div>
{% endblock %}
